@model CreateCourseSubjectVM

@{
    ViewData["Title"] = "Create Course Subject";
}

<h4 class="category-heading mb-3">Create <b class="text-danger"><u>Course</u></b> Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCourseSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Subject.Name" class="control-label"></label>
                <input asp-for="@Model.Subject.Name" class="form-control" />
                <span asp-validation-for="@Model.Subject.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Subject.Description" class="control-label"></label>
                <input asp-for="@Model.Subject.Description" class="form-control" />
                <span asp-validation-for="@Model.Subject.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Subject.RequiredReading" class="control-label"></label>
                <input asp-for="@Model.Subject.RequiredReading" class="form-control" />
                <span asp-validation-for="@Model.Subject.RequiredReading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Uid" value="@Model.Uid" />
                <input type="hidden" asp-for="@Model.CourseDesignId" value="@Model.CourseDesignId" />
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a class="btn btn-primary" href="previous.html" onClick="history.back();return false;">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}