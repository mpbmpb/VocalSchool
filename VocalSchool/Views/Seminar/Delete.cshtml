@model SeminarViewModel

@{
    ViewData["Title"] = "Delete";
}

<h4 class="category-heading mb-3">Delete seminar</h4>
<div class="alert alert-danger" role="alert">
    <h4>Are you sure you want to delete this seminar?</h4>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seminar.Name)
        </dt>
        <dd class="col-sm-10 alert alert-primary">
            @Html.DisplayFor(model => model.Seminar.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seminar.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seminar.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Seminar.SeminarId" />
        <input asp-for="LastPage" type="hidden" value="@Model.LastPage"/>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" href="previous.html" onClick="history.back();return false;">Back</a>
    </form>
</div>
