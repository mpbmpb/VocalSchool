@using VocalSchool.Controllers
@model CourseViewModel

@{
    ViewData["Title"] = "Delete";
}
@{
    var uid = Model.Course.CourseDesign.GetUid();
    var cascadeMessage = uid == "" ? "" : "All related course elements will be deleted as well";
}
<h4 class="category-heading mb-3">Delete course</h4>
<div class="alert alert-danger" role="alert">
    <h4>Are you sure you want to delete this course?</h4>
    <h4>@cascadeMessage</h4>
</div>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10 alert alert-primary">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Course.CourseId" />
        <input asp-for="LastPage" type="hidden" value="@Model.LastPage"/>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" href="previous.html" onClick="history.back();return false;">Back</a>
    </form>
</div>
